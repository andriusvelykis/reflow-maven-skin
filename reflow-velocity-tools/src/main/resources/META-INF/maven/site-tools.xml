<?xml version="1.0" encoding="UTF-8"?>
<!-- Add custom tools to Velocity tools. The site-tools.xml file is included in the classpath and Velocity finds it. -->
<tools>
  <toolbox scope="application">
    <tool key="config"
          class="lt.velykis.maven.skins.reflow.SkinConfigTool"/>
    <tool key="htmlTool"
          class="lt.velykis.maven.skins.reflow.HtmlTool"/>
    <tool key="uriTool"
          class="lt.velykis.maven.skins.reflow.URITool"/>
  </toolbox>
</tools>
